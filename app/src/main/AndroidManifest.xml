<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intellisyscorp.fitzme_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" /> <!-- Location information for weather -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".activtiy.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activtiy.SignUpStepOneActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activtiy.SetupActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activtiy.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activtiy.FilterActivity"
            android:label="필터"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activtiy.QuickAddItemActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activtiy.LoginActivity"
            android:label="로그인"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activtiy.MyOutfitDetailActivity"
            android:label="MyOutfit Detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activtiy.SecurityActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activtiy.NoticeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activtiy.VersionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activtiy.ItemDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_id" />
    </application>

</manifest>