<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="286dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <!-- 컨텐츠 공간 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 컨텐츠 내용 1 -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/C_84888C"
            android:textSize="14dp"
            android:fontFamily="@font/notosans_cjkkr_medium" />

        <!-- 컨텐츠 내용 2 -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_message_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/C_84888C"
            android:textSize="11dp"
            android:fontFamily="@font/notosans_cjkkr_medium" />
    </LinearLayout>

    <!-- 확인 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <!-- 아니오 -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/C_91C200"
            android:gravity="center"
            android:text="@string/str_no"
            android:textColor="@drawable/drawable_alert_button_text_color"
            android:textSize="17.5dp"
            android:visibility="gone"
            android:fontFamily="@font/notosans_cjkkr_medium" />

        <!-- 예 -->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/C_C0C0C0"
            android:gravity="center"
            android:text="@string/str_yes"
            android:textColor="@drawable/drawable_alert_button_text_color"
            android:textSize="17.5dp"
            android:visibility="gone"
            android:fontFamily="@font/notosans_cjkkr_medium" />
    </LinearLayout>

</LinearLayout>